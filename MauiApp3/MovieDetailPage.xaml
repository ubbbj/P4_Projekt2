<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watchlist.MovieDetailPage">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Image x:Name="posterImage" Aspect="AspectFill" />
            <Button x:Name="addToWatchlistButton" Clicked="OnAddToWatchlistClicked" />
            <Label x:Name="titleLabel" FontAttributes="Bold" />
            <Label x:Name="overviewLabel" />
            <Label x:Name="voteAverageLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>